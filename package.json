{
	"name": "react-aptform",
	"version": "1.0.0",
	"description": "Practical forms for react",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"author": {
		"name": "Šimon Mareš",
		"email": "simon.mares@protonmail.com"
	},
	"license": "MIT",
	"scripts": {
		"prepublishOnly": "npm run build",
		"prepare": "npm run check:all",
		"build": "whys-scripts bundle-react-lib",
		"format": "whys-scripts format",
		"flow": "flow",
		"test": "whys-scripts test-react",
		"lint": "whys-scripts lint-react",
		"check:all": "npx whys-scripts format-check && npm run lint && npx flow && npm run test",
		"storybook": "npx whys-scripts run-storybook"
