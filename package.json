	"devDependencies": {
		"@storybook/addon-actions": "^3.3.13",
		"@storybook/addon-links": "^3.3.13",
		"@storybook/addons": "^3.3.13",
		"@storybook/react": "^3.3.13",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"flow-bin": "^0.71.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"sinon": "^4.3.0",
		"whys-scripts": "^1.4.0"
	},
	"peerDependencies": {
		"react": "^16"
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/jest/env-setup.js"
		]
	},
	"dependencies": {
		"validator": "^9.4.1"
	},
	"whys-scripts": {
		"src": [
			"src/**/*.js",
			"examples/**/*.js"
		],
		"tests": [
			"tests/**/*.test.js"
		],
		"mainSource": "src/index.js"
	}
