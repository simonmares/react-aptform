{
	"name": "react-aptform",
	"version": "1.1.2",
	"description": "Practical forms for react",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/simonmares/react-aptform"
	},
	"author": {
		"name": "Šimon Mareš",
		"email": "simon.mares@protonmail.com"
	},
	"license": "MIT",
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "whys-scripts bundle",
		"test": "whys-scripts test",
		"pre-commit": "whys-scripts format --staged --add && whys-scripts lint --staged",
		"pre-push": "npm t && whys-scripts lint --changed && npx flow",
		"check:ci": "npm t && whys-scripts format-check && whys-scripts lint && npx flow check",
		"storybook": "npx whys-scripts run-storybook"
	},
	"devDependencies": {
		"@material-ui/core": "^3.0.0",
		"@testing-library/react": "^8.0.1",
		"flow-bin": "^0.102.0-rc",
		"formik": "^1.1.1",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"wait-for-expect": "^1.2.0",
		"whys-scripts": "^2.3.1"
	},
	"peerDependencies": {
		"react": ">=16.8"
	},
	"dependencies": {},
	"jest": {
		"setupFiles": [
			"<rootDir>/tests/jest/setupTestFrameworkScriptFile.js"
		]
	},
	"whys-scripts": {
		"src": [
			"src/**/*.js",
			"examples/**/*.js"
		],
		"projectType": "react-library",
		"tests": [
			"tests/**/*.test.js",
			"src/**/*.test.js"
		],
		"mainSource": "src/index.js"
	}
}
