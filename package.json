		"jest": "^22.3.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"sinon": "^4.3.0"
	},
	"babel": {
		"presets": [
			"stage-3",
			"env",
			"react"
		]
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/jest/env-setup.js"
		]
